<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="ServiceChangeStateWaitTime" value="15"/>
    <add key="WaitTimeBetweenActions" value="30"/>
  </appSettings>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="bindingeeer" closeTimeout="00:05:00"
      openTimeout="00:05:00" receiveTimeout="00:05:00" maxBufferPoolSize="66666666" maxBufferSize="66666666"
          maxReceivedMessageSize="66666666" >
          <readerQuotas maxDepth="66666666" maxStringContentLength="66666666"
            maxArrayLength="66666666" maxBytesPerRead="66666666" maxNameTableCharCount="66666666" />
        </binding>
      </basicHttpBinding>
    </bindings>
    <services>
      <service behaviorConfiguration="RestarterService_Behavior"
        name="Automation.Restarter.Agent.Core.Managers.RestartManager">
        <endpoint address="" binding="basicHttpBinding" name="Configuration"
          contract="Automation.Restarter.Agent.Contract.IRestartService" />
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://0.0.0.0:5050/RestartService" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="RestarterService_Behavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug  includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>